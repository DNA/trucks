<div class="row">
  <div class="col-xs-12 col-sm-6">
    <dl class="dl-horizontal" id="driver_data" data-lat="<%= @driver.latitude %>" data-lng="<%= @driver.longitude %>">
      <dt><%= Driver.human_attribute_name(:name) %></dt>
      <dd><%= @driver.name %></dd>

      <dt><%= Driver.human_attribute_name(:cpf) %></dt>
      <dd><%= @driver.cpf %></dd>

      <dt><%= Driver.human_attribute_name(:truck_type) %></dt>
      <dd><%= @driver.truck_type %></dd>

      <dt><%= Driver.human_attribute_name(:latitude) %></dt>
      <dd><%= @driver.latitude %></dd>

      <dt><%= Driver.human_attribute_name(:longitude) %></dt>
      <dd><%= @driver.longitude %></dd>
    </dl>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div id="map"></div>
    <script>
      function initMap() {
        var driverData = document.getElementById('driver_data')
        var driverLatLng = {
          lat: parseFloat(driverData.dataset.lat),
          lng: parseFloat(driverData.dataset.lng)
        }

        var map = new google.maps.Map(document.getElementById('map'), {
          center: driverLatLng,
          zoom: 15
        });
        var driverMarker = new google.maps.Marker({
          position: driverLatLng,
          map: map
        });

      }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?v=3&region=BR&language=pt-BR&callback=initMap"
    async defer></script>
  </div>
</div>
<br>
<div class="row">
  <div class="col-xs-12 col-sm-4">
    <div class="btn-group" role="group">
      <%= link_to t('form.edit'), edit_driver_path(@driver), class: 'btn btn-primary' %>
      <%= link_to t('form.back'), drivers_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>