<div class="row">
  <div class="col-xs-12">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= Driver.human_attribute_name(:name) %></th>
            <th><%= Driver.human_attribute_name(:cpf) %></th>
            <th><%= Driver.human_attribute_name(:truck_type) %></th>
            <th class="hidden-xs"><%= Driver.human_attribute_name(:latitude) %></th>
            <th class="hidden-xs"><%= Driver.human_attribute_name(:longitude) %></th>
            <th colspan="3"><%= t('form.actions') %></th>
          </tr>
        </thead>

        <tbody>
          <% @drivers.each do |driver| %>
            <tr>
              <td><%= link_to driver.name, driver %></td>
              <td><%= driver.cpf %></td>
              <td><%= driver.truck_type %></td>
              <td class="hidden-xs"><%= driver.latitude %></td>
              <td class="hidden-xs"><%= driver.longitude %></td>
              <td><%= link_to t('form.edit'), edit_driver_path(driver), class: 'btn btn-default' %></td>
              <td><%= link_to t('form.destroy'), driver, method: :delete, class: 'btn btn-danger', data: { confirm: t('form.destroy_confirmation') } %></td>
            </tr>
          <% end %>
          <% if @drivers.empty? %>
            <tr>
              <td colspan="7" class="text-center"><%= t('drivers.empty') %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%= link_to t('form.new'), new_driver_path, class: 'btn btn-primary' %>
  </div>
</div>
