<div class="row">
  <div class="col-xs-12">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= t('drivers.name') %></th>
          <th><%= t('drivers.cpf') %></th>
          <th><%= t('drivers.truck_type') %></th>
          <th class="hidden-xs"><%= t('drivers.latitude') %></th>
          <th class="hidden-xs"><%= t('drivers.longitude') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @drivers.each do |driver| %>
          <tr>
            <td><%= driver.name %></td>
            <td><%= driver.cpf %></td>
            <td><%= driver.truck_type %></td>
            <td class="hidden-xs"><%= driver.latitude %></td>
            <td class="hidden-xs"><%= driver.longitude %></td>
            <td><%= link_to t('form.show'), driver %></td>
            <td><%= link_to t('form.edit'), edit_driver_path(driver) %></td>
            <td><%= link_to t('form.destroy'), driver, method: :delete, data: { confirm: t('form.destroy_confirmation') } %></td>
          </tr>
        <% end %>
        <% if @drivers.empty? %>
          <tr>
            <td colspan="8" class="text-center"><%= t('drivers.empty') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to t('drivers.new'), new_driver_path, class: 'btn btn-primary' %>
  </div>
</div>
