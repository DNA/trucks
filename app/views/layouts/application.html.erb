<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title><%= page_title use_html: false %></title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only"><%= t('layout.toogle_navigation') %></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><%= t('layout.site_name') %></a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <%= navbar_link(drivers_path, t('controller.drivers', count: 2), 'drivers') %>
            <li><a href="#">Link</a></li>
          </ul>
        </div>

      </div>
    </nav>

    <div class="container-fluid" id="main">

      <% if notice %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <%= notice %>
      </div>
      <% end %>

      <div class="page-header">
        <h1><%= page_title.html_safe %></h1>
      </div>

      <%= yield %>

    </div>
  </body>
</html>
